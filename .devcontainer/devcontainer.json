{
  "name": "AWA Platform Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
  
  // Features to install
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true
    }
  },

  // Install dependencies and FFmpeg
  "postCreateCommand": "bash .devcontainer/post-create.sh",

  // Configure VS Code extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000
      }
    }
  },

  // Forward ports for Flask app
  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": {
      "label": "AWA Web Platform",
      "onAutoForward": "notify"
    }
  },

  // Set environment variables
  "remoteEnv": {
    "FLASK_APP": "app.py",
    "FLASK_ENV": "development"
  },

  // Use root for installation
  "remoteUser": "root",

  // Keep container running
  "postAttachCommand": "echo 'AWA Platform Ready! Run: python app.py or ./awa_launch.sh'"
}
